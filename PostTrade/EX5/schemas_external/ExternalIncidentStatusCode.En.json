{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "ExternalIncidentStatusCode",
  "description": "Codes for incident status",
  "oneOf": [
    {
      "type": "string",
      "description": "Incident is newly reported and awaiting initial analysis",
      "const": "OPEN"
    },
    {
      "type": "string",
      "description": "Incident is being actively worked on by the responsible team",
      "const": "IN_PROGRESS"
    },
    {
      "type": "string",
      "description": "Incident has been solved and awaits confirmation or validation",
      "const": "RESOLVED"
    },
    {
      "type": "string",
      "description": "Incident is closed and no further action is needed",
      "const": "CLOSED"
    }
  ],
  "additionalProperties": false,
  "examples": ["OPEN", "IN_PROGRESS", "RESOLVED", "CLOSED"]
}
