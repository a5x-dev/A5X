{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incident Category",
  "description": "Codes for incident categories",
  "oneOf": [
    {
      "type": "string",
      "description": "Incident related to network issues",
      "const": "NETWORK"
    },
    {
      "type": "string",
      "description": "Incident related to hardware issues",
      "const": "HARDWARE"
    },
    {
      "type": "string",
      "description": "Incident related to software issues",
      "const": "SOFTWARE"
    },
    {
      "type": "string",
