{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incident Severity",
  "description": "Codes for incident severity levels",
  "oneOf": [
    {
      "type": "string",
      "description": "Low severity incident with minimal impact",
      "const": "LOW"
    },
    {
      "type": "string",
      "description": "Medium severity incident with moderate impact",
      "const": "MEDIUM"
    },
    {
      "type": "string",
      "description": "High severity incident with significant impact",
      "const": "HIGH"
    },
    {
      "type": "string",
      "description": "Critical severity incident requiring immediate attention",
      "const": "CRITICAL"
    }
  ],
  "examples": [
    "LOW",
    "MEDIUM",
    "HIGH",
    "CRITICAL"
  ]
}