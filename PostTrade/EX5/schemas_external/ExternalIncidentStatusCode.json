{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incident Current Status",
  "description": "Codes for the current status of an incident",
  "oneOf": [
    {
      "type": "string",
      "description": "Incident is newly reported and open",
      "const": "OPEN"
    },
    {
      "type": "string",
      "description": "Incident is being actively addressed",
      "const": "IN_PROGRESS"
    },
    {
      "type": "string",
      "description": "Incident has been resolved",
      "const": "RESOLVED"
    },
    {
      "type": "string",
      "description": "Incident is closed and no further action is needed",
      "const": "CLOSED"
    }
  ],
  "examples": [
    "OPEN",
    "IN_PROGRESS",
    "RESOLVED",
    "CLOSED"
  ]
}