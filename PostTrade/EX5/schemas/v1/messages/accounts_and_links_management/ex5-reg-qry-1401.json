{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:a5x:ex5:schema:v1:accounts_and_links_management:ex5-reg-qry-14",
  "$metadata": {
    "domain": "accounts_and_links_management",
    "schemaId": "urn:a5x:ex5:schema:v1:accounts_and_links_management:ex5-reg-qry-14"
  },
  "title": "Account Link Search Message",
  "description": "Search for existing links with optional filter criteria",
  "$comment": "All fields are optional filters. Required items limited to a maximum of 100. If no filters are provided, returns all links belonging to the requesting participant.",
  "type": "object",
  "properties": {
    "linkType": {
      "type": "array",
      "items": {
        "$ref": "../../objects/business/ExternalCodeList.json",
        "$comment": "Consult External Code List table ExternalLinkedAccountTypeCode"
      },
      "description": "Type of link between accounts",
      "maxItems": 50
    },
    "linkStatus": {
      "type": "array",
      "items": {
        "$ref": "../../objects/business/ExternalCodeList.json",
        "$comment": "Consult External Code List table ExternalStatusCode. If not provided, default is 6 (ATIVO)"
      },
      "description": "Status of account links",
      "maxItems": 50
    },
    "participantIdentification": {
      "type": "array",
      "items": {
        "$ref": "../../objects/business/PartyId.json"
      },
      "description": "Participant identification",
      "maxItems": 50
    },
    "accountIdentification": {
      "type": "array",
      "items": {
        "$ref": "../../objects/business/AccountIdentification.json"
      },
      "description": "Account identification",
      "maxItems": 1000
    },
    "creationDate": {
      "$ref": "../../objects/business/DateRange.json",
      "description": "Creation date range of link"
    },
    "updateDate": {
      "$ref": "../../objects/business/DateRange.json",
      "description": "Update date range of link"
    }
  },
  "anyOf": [
    {
      "required": [
        "participantIdentification"
      ]
    },
    {
      "required": [
        "participantIdentification",
        "accountIdentification"
      ]
    },
    {
      "required": [
        "creationDate"
      ]
    }
  ],
  "additionalProperties": false,
  "examples": [
    {
      "participantIdentification": [
        {
          "id": 789012,
          "category": 3
        },
        {
          "id": 789013,
          "category": 3
        }
      ],
      "accountIdentification": [
        {
          "id": 123456789
        },
        {
          "id": 12345679
        }
      ],
      "linkType": [
        3,4
      ],
      "linkStatus": [
        1,2
      ],
      "creationDate": {
        "start": "2023-01-01",
        "end": "2023-12-31"
      },
      "updateDate": {
        "start": "2023-01-01",
        "end": "2023-01-31"
      }
    }
  ]
}