{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:a5x:ex5:schema:v1:technical:ex5-tec-err-02",
  "$metadata": {
    "domain": "technical",
    "schemaId": "urn:a5x:ex5:schema:v1:technical:ex5-tec-err-02"
  },
  "title": "Technical Error Response",
  "description": "Response message for technical and business error",
  "type": "object",
  "properties": {
    "errorIdentification": {
      "type": "array",
      "items": {
        "$ref": "../../objects/tech/StatusError.json"
      },
      "description": "Array of error rule identifiers when status indicates failure",
      "maxItems": 60
    }
  },
  "required": [
    "errorIdentification"
  ],
  "additionalProperties": true,
  "examples": [
    {
      "errorIdentification": [
        {
          "code": "TEC00000",
          "message": "Error X",
          "errorDescription": "COD12452",
          "refId": "REF12345"
        }
      ]
    }
  ]
}