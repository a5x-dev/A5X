{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "urn:a5x:ex5:schema:v1:business:LegalEntitySpecific",
  "$metadata" : {
    "domain" : "business",
    "schemaId" : "urn:a5x:ex5:schema:v1:business:LegalEntitySpecific"
  },
  "title" : "Legal Entity Specific",
  "description" : "Specific data for legal entity registration",
  "properties" : {
    "statusNIF" : {
      "$ref" : "../../objects/business/ExternalCodeTextList.json",
      "description" : "NIF status indicator. ",
      "$comment" : "This field is optional and can be used to indicate the NIF status of the entity. Consult External Code Text table ExternalNIFIndicatorCode."
    },
    "economicActivity" : {
      "$ref" : "../../objects/business/ExternalCodeTextList.json",
      "description" : "Economic activity. ",
      "$comment" : "Consult External Code Text List table - ExternalPurposeCode."
    },
    "nonResidentClassification" : {
      "$ref" : "../../objects/business/ExternalCodeList.json",
      "description" : "Non resident classification description",
      "$comment" : "Consult External Code Text List table - ExternalNonResidentClassificationCode."
    },
    "revenue" : {
      "$ref" : "../../objects/business/MonetaryValue.json",
      "description" : "Revenue with currency specification"
    },
    "patrimony" : {
      "$ref" : "../../objects/business/MonetaryValue.json",
      "description" : "Patrimonial situation with currency specification"
    },
    "exclusiveFund" : {
      "type" : "boolean",
      "description" : "Exclusive fund indicator"
    },
    "exclusiveFundData" : {
      "$ref" : "../../objects/business/ExclusiveFund.json",
      "description" : "Exclusive fund data",
      "$comment" : "Required when exclusiveFund is true"
    },
    "nonResidentBeneficialOwner" : {
      "type" : "boolean",
      "description" : "Non-resident beneficial owner indicator for legal entity account registration"
    },
    "isNonProfit" : {
      "type" : "boolean",
      "description" : "Boolean flag indicating the organization's non-profit status. True = non-profit organization, False = for-profit entity",
      "examples" : [ true, false ]
    }
  },
  "required" : [ "isNonProfit" ],
  "examples" : [ {
    "statusNIF" : "SIM",
    "economicActivity" : "6201-5/01",
    "nonResidentClassification" : 1,
    "revenue" : {
      "amount" : "1000000.00",
      "currency" : "BRL"
    },
    "patrimony" : {
      "amount" : "5000000.00",
      "currency" : "BRL"
    },
    "exclusiveFund" : true,
    "exclusiveFundData" : {
      "personType" : 1,
      "residenceStatus" : "RESI",
      "documentIdentifier" : {
        "documentType" : 2,
        "documentNumber" : "12345678901"
      },
      "relatedPerson" : false,
      "politicallyExposedPerson" : false,
      "usPerson" : false,
      "countryOfResidence" : "BRA"
    },
    "nonResidentBeneficialOwner" : false,
    "isNonProfit" : false
  } ]
}