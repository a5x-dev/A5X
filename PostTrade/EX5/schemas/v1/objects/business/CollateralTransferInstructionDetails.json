{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "urn:a5x:ex5:schema:v1:business:CollateralTransferInstructionDetails",
  "$metadata" : {
    "domain" : "business",
    "schemaId" : "urn:a5x:ex5:schema:v1:business:CollateralTransferInstructionDetails"
  },
  "title" : "Collateral Transfer Instruction Detail",
  "description" : "Collateral transfer instruction details",
  "type" : "object",
  "properties" : {
    "positionTransferReference" : {
      "type" : "string",
      "maxLength" : 15,
      "minLength" : 1,
      "description" : "The field PositionTransferReference is used to identify a position transfer"
    },
    "securitiesCollateral" : {
      "type" : "array",
      "description" : "Securities collateral items for transfer approval",
      "items" : {
        "allOf" : [ {
          "$ref" : "../../objects/business/SecuritiesCollateralTransfer.json"
        }, {
          "properties" : {
            "collateralIdentification" : true,
            "assetNumber" : true,
            "centralDepositaryOperationNumber" : true,
            "custodianInformationDestination" : true,
            "quantity" : true,
            "activeCurrencyAndAmount" : false
          },
          "required" : [ "collateralIdentification", "assetNumber", "centralDepositaryOperationNumber", "custodianInformationDestination", "quantity" ]
        } ]
      },
      "minItems" : 1,
      "maxItems" : 60
    },
    "cashCollateral" : {
      "type" : "array",
      "description" : "Cash collateral items for transfer approval",
      "items" : {
        "allOf" : [ {
          "$ref" : "../../objects/business/CashCollateralTransfer.json"
        }, {
          "properties" : {
            "collateralIdentification" : true,
            "assetNumber" : true,
            "operationValue" : true,
            "collateralValue" : false
          },
          "required" : [ "collateralIdentification", "assetNumber", "operationValue" ]
        } ]
      },
      "minItems" : 1,
      "maxItems" : 60
    },
    "federalBonds" : {
      "type" : "array",
      "description" : "Other types of collateral for transfer approval",
      "items" : {
        "allOf" : [ {
          "$ref" : "../../objects/business/FederalBondsTransfer.json"
        }, {
          "properties" : {
            "collateralIdentification" : true,
            "collateralType" : false,
            "assetNumber" : true,
            "assignerAccount" : true,
            "assigneeAccount" : true,
            "quantity" : true,
            "collateralValue" : false
          },
          "required" : [ "collateralIdentification", "assetNumber", "assignerAccount", "assigneeAccount", "quantity" ]
        } ]
      },
      "minItems" : 1,
      "maxItems" : 60
    },
    "externalCollateral" : {
      "type" : "array",
      "description" : "Other types of collateral for transfer approval",
      "items" : {
        "allOf" : [ {
          "$ref" : "../../objects/business/OtherCollateralDistribution.json"
        }, {
          "properties" : {
            "distributionCommandNumber" : false,
            "collateralIdentification" : true,
            "assetNumber" : true,
            "collateralType" : false,
            "quantity" : true
          },
          "required" : [ "collateralIdentification", "assetNumber", "quantity" ]
        } ]
      },
      "minItems" : 1,
      "maxItems" : 60
    }
  },
  "required" : [ ],
  "anyOf" : [ {
    "properties" : {
      "securitiesCollateral" : true
    },
    "required" : [ "securitiesCollateral" ]
  }, {
    "properties" : {
      "cashCollateral" : true
    },
    "required" : [ "cashCollateral" ]
  }, {
    "properties" : {
      "federalBonds" : true
    },
    "required" : [ "federalBonds" ]
  }, {
    "properties" : {
      "externalCollateral" : true
    },
    "required" : [ "externalCollateral" ]
  } ],
  "additionalProperties" : false,
  "examples" : [ {
