{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "urn:a5x:ex5:schema:v1:business:MonetaryValue",
  "$metadata" : {
    "domain" : "business",
    "schemaId" : "urn:a5x:ex5:schema:v1:business:MonetaryValue"
  },
  "title" : "MonetaryValue",
  "description" : "Financial value with currency specification",
  "type" : "object",
  "properties" : {
    "amount" : {
      "type" : "string",
      "pattern" : "^\\d{1,15}(\\.\\d{1,2})?$",
      "description" : "Monetary amount with up to 2 decimal places",
      "examples" : [ "1000.00", "15750.50", "250000" ]
    },
    "currency" : {
      "$ref" : "../../objects/business/ExternalCodeTextList.json",
      "description" : "Currency code in which the amount is denominated",
      "$comment" : "Consult External Code List table ExternalCurrencyCode"
    }
  },
  "required" : [ "amount", "currency" ],
  "additionalProperties" : false,
  "examples" : [ {
    "amount" : "1000.00",
    "currency" : "BRL"
  }, {
    "amount" : "50000.00",
    "currency" : "USD"
  } ]
}