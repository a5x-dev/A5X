{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "urn:a5x:ex5:schema:v1:business:SimulationPosition",
  "$metadata" : {
    "domain" : "business",
    "schemaId" : "urn:a5x:ex5:schema:v1:business:SimulationPosition"
  },
  "title" : "Margin Position Detail",
  "description" : "Derivatives Margin positions",
  "type" : "object",
  "properties" : {
    "tickerSymbol" : {
      "type" : "string",
      "maxLength" : 35,
      "minLength" : 1,
      "description" : "Symbol of the Instrument"
    },
    "settlementCurrency" : {
      "$ref" : "../../objects/business/ExternalCodeTextList.json",
      "description" : "Settlement currency code in which the amount is denominated",
      "$comment" : "Consult External Code List table ExternalCurrencyCode"
    },
    "longPosition" : {
      "type" : "integer",
      "minimum" : 0,
      "description" : "Amount of Long Position"
    },
    "shortPosition" : {
      "type" : "integer",
      "minimum" : 0,
      "description" : "Amount of Short Position"
    },
    "longValue" : {
      "$ref" : "../../objects/business/MonetaryValue.json",
      "description" : "Amount of long value. Long Value = Long Position × Price"
    },
    "shortValue" : {
      "$ref" : "../../objects/business/MonetaryValue.json",
      "description" : "Amount of short value. Short Value = Short Position × Price"
    }
  },
  "required" : [ "tickerSymbol", "settlementCurrency" ],
  "additionalProperties" : false,
  "examples" : [ {
    "tickerSymbol" : "ABCDEFG",
    "settlementCurrency" : "BRL",
    "longPosition" : 5,
    "shortPosition" : 2,
    "longValue" : {
      "currency" : "BRL",
      "amount" : "25000.00"
    },
    "shortValue" : {
      "currency" : "BRL",
      "amount" : "25000.00"
    }
  } ]
}