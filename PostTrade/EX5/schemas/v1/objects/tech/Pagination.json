{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "urn:a5x:ex5:schema:v1:tech:Pagination",
  "$metadata" : {
    "domain" : "tech",
    "schemaId" : "urn:a5x:ex5:schema:v1:tech:Pagination"
  },
  "type" : "object",
  "title" : "Pagination",
  "description" : "Information for pagination control",
  "properties" : {
    "currentPage" : {
      "type" : "integer",
      "minimum" : 1,
      "description" : "Current page number"
    },
    "perPage" : {
      "type" : "integer",
      "minimum" : 0,
      "description" : "Number of items per page"
    },
    "totalPages" : {
      "type" : "integer",
      "minimum" : 1,
      "description" : "Total number of pages"
    },
    "totalItems" : {
      "type" : "integer",
      "minimum" : 0,
      "description" : "Total number of items"
    },
    "nextPage" : {
      "type" : [ "integer", "null" ],
      "description" : "Next page number, if available"
    },
    "prevPage" : {
      "type" : [ "integer", "null" ],
      "description" : "Previous page number, if available"
    }
  },
  "required" : [ "currentPage", "perPage", "totalPages", "totalItems" ],
  "additionalProperties" : false
}